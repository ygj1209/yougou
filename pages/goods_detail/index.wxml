
<!-- 轮播图开始--->
<view class="detail_swiper">
    <swiper autoplay circular indicator-dots>
         
         <swiper-item class="" wx:for="{{goodsObj.pics}}" wx:key="{{pics_id}}" bindtap="handlePreviewImage" data-index="{{index}}">
             <image mode="widthFix" src="{{item.pics_mid}}"></image>
         </swiper-item>
           
    </swiper>
      
</view>
<!-- 轮播图 结束 -->

<!-- 价格 开始 -->
<view class="goods_price">￥{{goodsObj.goods_price}}</view>
<!-- 价格 结束 -->

<view class="goods_info">
  <view class="goods_name">{{goodsObj.goods_name}}</view>
  <view class="goods_collect">
    <text class="iconfont icon-shoucang"></text>
    <view class="collect_text">收藏</view>
  </view>
</view>

<!-- 图文详情 开始 -->
<view class="goods_detail">
  <view class="goods_detail_title">图文详情</view>
  <view class="goods_detail_content">
    <!-- 富文本标签 -->
    <rich-text  nodes="{{goodsObj.goods_introduce}}">

    </rich-text>

  </view>
</view>
<!-- 图文详情 结束 -->

<!-- 底部工具栏 开始 -->

<view class="btm_tool">
    <view class="tool_item">
      <text class="iconfont icon-kefu"></text>
     <view class="item_name">客服</view>
    </view>
    <view class="tool_item">
    <text class="iconfont icon-yixianshi-"></text>
    <view class="item_name">分享</view>
  </view>
    <view class="tool_item">
    <text class="iconfont icon-gouwuche"></text>
    <view class="item_name">购物车</view>
  </view>
    <view class="tool_item btn_cart ">加入购物车</view>
  <view class="tool_item btn_buy ">立即购买</view>
</view>

<!-- 底部工具栏 结束 -->
